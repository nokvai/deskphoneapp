{
  "name": "monstervoipdeskphone",
  "productName": "MonsterVoIP Desktop Phone",
  "version": "1.18.45",
  "description": "Monster VoIP Desktop Phone for Windows",
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\"",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "release": "npm run dist && npm run publish",
    "dist-all": "electron-builder -mw",
    "postinstall": "electron-builder install-app-deps",
    "ship": "electron-builder -p always",
    "ship:all": "electron-builder -mwl --x64 --ia32 -p always"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/luisdeleon/deskphone.git"
  },
  "keywords": [
    "Monster",
    "VoIP",
    "Desktop",
    "Phone"
  ],
  "author": {
    "name": "luisdeleon",
    "email": "luis.deleon@ebluenet.com"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "monstervoipdeskphone",
            "setupIcon": "build/MonsterVoip.ico",
            "iconUrl": "https://github.com/luisdeleon/deskphone/master/build/MonsterVoip.ico"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "build": {
    "appId": "com.monstervoip.desktopphone",
    "productName": "MonsterVoIP Desktop Phone",
    "publish": [
      {
        "provider": "github",
        "owner": "luisdeleon",
        "repo": "deskphone",
        "private": true,
        "releaseType": "release",
        "token": "530a302e711cf79bd24e9ca7aec8719b49a39f30"
      }
    ],
    "files": [
      "**/*",
      "build/MonsterVoip.ico",
      "build/MonsterVoip.png",
      "build/icon32x32.png"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/MonsterVoip.png",
      "extendInfo": {
        "LSMultipleInstancesProhibited": true
      }
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/MonsterVoip.png",
      "publisherName": "Monster Technology LLC"
    },
    "squirrelWindows": {
      "iconUrl": "https://github.com/luisdeleon/deskphone/master/build/MonsterVoip.ico"
    },
    "directories": {
      "buildResources": "resources",
      "output": "dist"
    },
    "extraFiles": [
      "MonsterVoip.ico"
    ],
    "nsis": { 
      "oneClick": true,
      "installerIcon": "build/MonsterVoip.ico",
      "installerHeaderIcon": "build/MonsterVoip.ico",
      "deleteAppDataOnUninstall": true
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 440,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "icon": "MonsterVoip.icns",
      "title": "Monster VoIP Desktop Phone"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm",
        "snap"
      ]
    }
  },
  "dependencies": {
    "auto-launch": "^5.0.5",
    "axios": "^0.19.2",
    "bootstrap": "^4.1.3",
    "electron-builder-squirrel-windows": "^22.8.1",
    "electron-is-dev": "^1.2.0",
    "electron-log": "^4.2.4",
    "electron-squirrel-startup": "^1.0.0",
    "electron-updater": "^4.3.5",
    "jquery": "^3.3.1",
    "node-notifier": "^8.0.0",
    "popper.js": "^1.14.4",
    "update-electron-app": "^1.5.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.52",
    "@electron-forge/maker-deb": "^6.0.0-beta.52",
    "@electron-forge/maker-rpm": "^6.0.0-beta.52",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.52",
    "@electron-forge/maker-zip": "^6.0.0-beta.52",
    "electron": "^9.1.0",
    "electron-builder": "^22.7.0"
  }
}
